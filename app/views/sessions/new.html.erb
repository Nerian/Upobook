
<div id="login_box">
  <%= form_tag do %>
    <fieldset>
      <legend>Login</legend>

      <label for="mail">Mail:</label>
      <%= text_field_tag :mail, params[:mail] %>

      <label for="password">Password:</label>
      <%= password_field_tag :password, params[:password] %>

      <%= submit_tag "Login"%>

    </fieldset>
  <% end %>
  <br/>
  <h5>Usuario de prueba:</h5>
  <p>
    <span>Mail: prueba@upo.com</span><br/>
    <span>Password: prueba</span>
  </p>

  <h3><%= link_to "Nuevo usuario", new_user_path %> </h3>
</div>